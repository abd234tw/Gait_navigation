<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetPoint">


    <TextView
        android:id="@+id/gyroscope_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="x" />

    <TextView
        android:id="@+id/orien_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gyroscope_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="x" />

    <TextView
        android:id="@+id/step_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/is_turn_floor"
        android:layout_marginBottom="-8dp"
        android:text="0"
        android:textColor="#DE5347"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_distance_btn"
        android:background="@drawable/round_botton_black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="輸入\n步長" />

    <Button
        android:id="@+id/timer_start_btn"
        android:background="@drawable/round_botton_black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:text="開始" />

    <Button
        android:id="@+id/timer_pause_btn"
        android:background="@drawable/round_botton_black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:text="暫停" />


    <EditText
        android:id="@+id/Step_length_edit"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/get_distance_btn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="200dp"
        android:layout_height="297dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/viewObj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="93dp"
            android:orientation="vertical" />
    </ScrollView>

    <Spinner
        android:id="@+id/building_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/step_view"
        android:layout_marginStart="-60dp"
        android:layout_alignBottom="@+id/et_place"
        android:layout_marginBottom="-40dp" />

    <Spinner
        android:id="@+id/floor_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_place"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="-40dp"
        android:layout_toEndOf="@+id/get_distance_btn" />

    <EditText
        android:id="@+id/et_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:hint="地點名稱"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="座標名稱" />

    <Button
        android:id="@+id/mAdd_btn"
        android:background="@drawable/btn_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_Name"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="14dp"
        android:text="新增" />

    <Button
        android:id="@+id/mRemove_btn"
        android:background="@drawable/btn_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_Name"
        android:layout_marginBottom="14dp"
        android:text="移除" />

    <CheckBox
        android:id="@+id/is_turn_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Name"
        android:layout_marginTop="-110dp"
        android:layout_toEndOf="@+id/get_distance_btn"
        android:text="樓梯" />

    <CheckBox
        android:id="@+id/is_turn_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-110dp"
        android:text="岔路" />

    <CheckBox
        android:id="@+id/is_turn_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/is_turn_branch"
        android:layout_marginRight="-70dp"
        android:layout_below="@+id/et_Name"
        android:layout_marginTop="-110dp"
        android:text="沒路" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/get_distance_btn"
        android:layout_marginTop="94dp"
        android:textSize="18sp"
        android:text="當前步數: " />

</RelativeLayout>