<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:liv_displayMode="circularIcon"
            app:liv_icon="@drawable/ic_notifications_black_24dp"
            app:liv_menu="@menu/check_menu"
            app:liv_menuActionColor="@color/colorCadetblue"
            app:liv_multiline="false"
            app:liv_subtitle=""
            app:liv_title="通知">

        </com.lucasurbas.listitemview.ListItemView>

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:liv_displayMode="circularIcon"
            app:liv_icon="@drawable/ic_volume_up_black_24dp"
            app:liv_menu="@menu/check_menu"
            app:liv_menuActionColor="@color/colorCadetblue"
            app:liv_multiline="false"
            app:liv_subtitle="語音導航"
            app:liv_title="音效">


        </com.lucasurbas.listitemview.ListItemView>

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:liv_displayMode="circularIcon"
            app:liv_icon="@drawable/ic_account_circle_black_24dp"
            app:liv_menu="@menu/single_menu"
            app:liv_multiline="false"
            app:liv_subtitle="登出"
            app:liv_title="帳戶" />

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:liv_displayMode="circularIcon"
            app:liv_icon="@drawable/ic_refresh_black_24dp"
            app:liv_menu="@menu/multi_menu"
            app:liv_multiline="false"
            app:liv_subtitle="地圖恢復預設模式"
            app:liv_title="重置" />

    </LinearLayout>

</RelativeLayout>